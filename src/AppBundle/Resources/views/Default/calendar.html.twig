{% extends 'AppBundle::layout.html.twig' %}

{% block menu_calendar %}active{% endblock %}

{% block contents %}
    <section>
        <div class="container">
            <div class="col-md-6">
                <br/>
                <ul>
                    {% for episode in episodes %}
                        <li>
                            {{ episode.date |date("d/m/Y") }} : {{ episode.season.show }} - Saison {{ episode.season.number }} : {{ episode }} ({{ episode.number }})
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </section>
{% endblock %}